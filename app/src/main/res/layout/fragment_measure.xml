<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/measures_txt_titulo"
            android:textStyle="bold"
            android:textSize="20sp"
            android:paddingBottom="12dp" />

        <!-- Longitud -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/measures_txt_longitud"
            android:textStyle="bold"
            android:paddingBottom="4dp" />

        <RadioGroup
            android:id="@+id/rgLongitud"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rbLongitudM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/measures_txt_metros" />

            <RadioButton
                android:id="@+id/rbLongitudFt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/measures_txt_pies" />
        </RadioGroup>

        <!-- Volumen -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/measures_txt_volumen"
            android:textStyle="bold"
            android:paddingTop="12dp"
            android:paddingBottom="4dp" />

        <RadioGroup
            android:id="@+id/rgVolumen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rbVolumenMl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/measures_txt_mililitros" />

            <RadioButton
                android:id="@+id/rbVolumenOz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/measures_txt_onzas" />
        </RadioGroup>

        <!-- Peso -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/measures_txt_peso"
            android:textStyle="bold"
            android:paddingTop="12dp"
            android:paddingBottom="4dp" />

        <RadioGroup
            android:id="@+id/rgPesoUnidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rbPesoKg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/measures_txt_kilos" />

            <RadioButton
                android:id="@+id/rbPesoLb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/measures_txt_libras" />
        </RadioGroup>

        <Button
            android:id="@+id/btnGuardarUnidades"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/measures_btn_guardar"
            android:layout_marginTop="24dp" />

    </LinearLayout>
</ScrollView>
