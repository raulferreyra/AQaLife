<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Recordatorios de bebidas -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recordatorios de bebidas"
            android:textStyle="bold"
            android:textSize="18sp"
            android:paddingBottom="8dp" />

        <RadioGroup
            android:id="@+id/rgReminderAgua"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rbAgua30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30 min" />

            <RadioButton
                android:id="@+id/rbAgua60"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="60 min" />

            <RadioButton
                android:id="@+id/rbAgua120"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="120 min" />
        </RadioGroup>

        <CheckBox
            android:id="@+id/checkAguaEnabled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Activar recordatorio de bebidas"
            android:paddingTop="4dp"
            android:paddingBottom="12dp" />

        <!-- Recordatorios de peso -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recordatorios de peso"
            android:textStyle="bold"
            android:textSize="18sp"
            android:paddingBottom="8dp" />

        <RadioGroup
            android:id="@+id/rgReminderPeso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rbPeso7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7 días" />

            <RadioButton
                android:id="@+id/rbPeso15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15 días" />

            <RadioButton
                android:id="@+id/rbPeso30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30 días" />
        </RadioGroup>

        <CheckBox
            android:id="@+id/checkPesoEnabled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Activar recordatorio de peso"
            android:paddingTop="4dp"
            android:paddingBottom="12dp" />

        <!-- Horario común de recordatorios -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Horario de recordatorios"
            android:textStyle="bold"
            android:textSize="18sp"
            android:paddingBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inicio:" />

            <TextView
                android:id="@+id/txtHoraInicio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="09:00"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnCambiarHoraInicio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cambiar" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fin:" />

            <TextView
                android:id="@+id/txtHoraFin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="22:00"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnCambiarHoraFin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cambiar" />
        </LinearLayout>

        <Button
            android:id="@+id/btnGuardarReminders"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GUARDAR"
            android:layout_marginTop="24dp" />

    </LinearLayout>
</ScrollView>
