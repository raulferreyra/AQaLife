<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Recordatorios de bebidas -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/reminders_txt_bebidas_title"
            android:textStyle="bold"
            android:textSize="18sp"
            android:paddingBottom="8dp" />

        <RadioGroup
            android:id="@+id/rgReminderAgua"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rbAgua30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/reminders_txt_30min" />

            <RadioButton
                android:id="@+id/rbAgua60"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/reminders_txt_60min" />

            <RadioButton
                android:id="@+id/rbAgua120"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/reminders_txt_120min" />
        </RadioGroup>

        <CheckBox
            android:id="@+id/checkAguaEnabled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reminders_txt_bebidas_enable"
            android:paddingTop="4dp"
            android:paddingBottom="12dp" />

        <!-- Recordatorios de peso -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/reminders_txt_peso_title"
            android:textStyle="bold"
            android:textSize="18sp"
            android:paddingBottom="8dp" />

        <RadioGroup
            android:id="@+id/rgReminderPeso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rbPeso7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/reminders_txt_7dias" />

            <RadioButton
                android:id="@+id/rbPeso15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/reminders_txt_15dias" />

            <RadioButton
                android:id="@+id/rbPeso30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/reminders_txt_30dias" />
        </RadioGroup>

        <CheckBox
            android:id="@+id/checkPesoEnabled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reminders_txt_peso_enable"
            android:paddingTop="4dp"
            android:paddingBottom="12dp" />

        <!-- Horario comÃºn de recordatorios -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/reminders_txt_horario_title"
            android:textStyle="bold"
            android:textSize="18sp"
            android:paddingBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/reminders_txt_inicio" />

            <TextView
                android:id="@+id/txtHoraInicio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="09:00"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnCambiarHoraInicio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/reminders_btn_cambiar" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/reminders_txt_fin" />

            <TextView
                android:id="@+id/txtHoraFin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="22:00"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnCambiarHoraFin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/reminders_btn_cambiar" />
        </LinearLayout>

        <Button
            android:id="@+id/btnGuardarReminders"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/reminders_btn_guardar"
            android:layout_marginTop="24dp" />

    </LinearLayout>
</ScrollView>
