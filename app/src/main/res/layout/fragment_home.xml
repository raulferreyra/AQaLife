<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Saludo -->
        <TextView
            android:id="@+id/txtGreeting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/home_txt_saludo_default"
            android:textSize="18sp"
            android:paddingBottom="4dp" />

        <TextView
            android:id="@+id/txtTituloDashboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/home_txt_titulo"
            android:textStyle="bold"
            android:textSize="22sp"
            android:paddingBottom="12dp" />

        <!-- Bloque 1: IMC + KPI ARRIBA -->
        <TextView
            android:id="@+id/txtResumenImc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/home_txt_imc_label"
            android:textSize="16sp"
            android:paddingBottom="8dp" />

        <com.urasweb.aqualife.ui.home.ImcGaugeView
            android:id="@+id/imcGauge"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/home_txt_abd_risk_title"
            android:textStyle="bold"
            android:paddingBottom="4dp" />

        <com.urasweb.aqualife.ui.home.AbdominalRiskGaugeView
            android:id="@+id/abdGauge"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/txtPerimetro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:paddingTop="4dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txtRiesgoPerimetro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txtDatosUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/home_txt_user_data_title"
            android:textStyle="bold"
            android:paddingTop="12dp"
            android:paddingBottom="4dp" />

        <TextView
            android:id="@+id/txtResumenDatos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp" />

        <!-- Título para histórico -->
        <TextView
            android:id="@+id/txtHistoricoTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/home_txt_history_title"
            android:textStyle="bold"
            android:paddingTop="12dp"
            android:paddingBottom="4dp"
            android:visibility="gone" />

        <!-- Vista de gráfico histórico (línea + barras) -->
        <com.urasweb.aqualife.ui.home.ImcHistoryChartView
            android:id="@+id/imcHistoryChart"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginBottom="16dp"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnVolverAPesar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/home_btn_weigh_again"
            android:layout_marginBottom="16dp" />

    </LinearLayout>
</ScrollView>
